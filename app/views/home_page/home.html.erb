<% provide(:title, "Blog") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
      <div class="col-md-8">
        <h3>Blogs</h3>
        <%= render 'shared/blog_posts' %>
      </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to your blog</h1>
      <p>
        <%= link_to "Log in to the blog", login_path, class: "btn btn-lg btn-primary" %>
      </p>
  </div>
<% end %>

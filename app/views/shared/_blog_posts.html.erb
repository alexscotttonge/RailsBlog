  <ol class="post">
    <%= render current_user.posts %>
    <!-- Renders as below -->
    <%#= render partial: "posts/post", collection: current_user.posts, as: :post %>
    <!--
    Rails should knows to look for the _post partial in views/posts because <thead>
      result of iterating over current_user.blog_posts is an array with parameter
      |post|
    The _post partial, with local var post, iterates over current_user.blog_posts
    to render each one in the view -->
  </ol>
<% end %>
